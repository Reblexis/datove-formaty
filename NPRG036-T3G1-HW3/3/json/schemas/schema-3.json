{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.org/schema-3.json",
    "title": "Teachers with Subjects and Buildings",
    "type": "object",
    "$defs": {
        "langString": {
            "type": "object",
            "properties": {
                "cs": {"type": "string"},
                "en": {"type": "string"}
            },
            "anyOf": [
                {"required": ["cs"]},
                {"required": ["en"]}
            ]
        },
        "person": {
            "type": "object",
            "required": ["id", "firstName", "lastName"],
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uri"
                },
                "firstName": {"$ref": "#/$defs/langString"},
                "lastName": {"$ref": "#/$defs/langString"},
                "mobileNumber": {
                    "type": "array",
                    "items": {"type": "string"}
                }
            }
        }
    },
    "properties": {
        "teachers": {
            "type": "array",
            "items": {
                "allOf": [
                    {"$ref": "#/$defs/person"},
                    {
                        "type": "object",
                        "required": ["salary"],
                        "properties": {
                            "salary": {"type": "integer"},
                            "subjects": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": ["id", "name", "code"],
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "format": "uri"
                                        },
                                        "name": {"$ref": "#/$defs/langString"},
                                        "code": {"type": "string"}
                                    }
                                }
                            },
                            "resides": {
                                "type": "object",
                                "required": ["id", "address", "name"],
                                "properties": {
                                    "id": {
                                        "type": "string",
                                        "format": "uri"
                                    },
                                    "address": {"$ref": "#/$defs/langString"},
                                    "name": {"$ref": "#/$defs/langString"}
                                }
                            }
                        }
                    }
                ]
            }
        }
    },
    "required": ["teachers"]
}

