{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.org/schema-3.json",
    "title": "Teachers with Subjects and Buildings",
    "type": "object",
    "$defs": {
        "langString": {
            "type": "object",
            "properties": {
                "cs": {"type": "string"},
                "en": {"type": "string"}
            },
            "anyOf": [
                {"required": ["cs"]},
                {"required": ["en"]}
            ]
        }
    },
    "properties": {
        "@context": {"type": "object"},
        "@graph": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "object",
                        "required": ["@id", "@type", "firstName", "lastName", "salary"],
                        "properties": {
                            "@id": {
                                "type": "string",
                                "format": "uri"
                            },
                            "@type": {
                                "type": "string",
                                "const": "Teacher"
                            },
                            "firstName": {"$ref": "#/$defs/langString"},
                            "lastName": {"$ref": "#/$defs/langString"},
                            "salary": {"type": "integer"},
                            "mobileNumber": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "format": "uri",
                                    "pattern": "^tel:"
                                }
                            },
                            "subjects": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": ["@id", "@type", "subjectName", "code"],
                                    "properties": {
                                        "@id": {
                                            "type": "string",
                                            "format": "uri"
                                        },
                                        "@type": {
                                            "type": "string",
                                            "const": "Subject"
                                        },
                                        "subjectName": {"$ref": "#/$defs/langString"},
                                        "code": {"type": "string"}
                                    }
                                }
                            },
                            "resides": {
                                "type": "object",
                                "required": ["@id", "@type", "buildingName", "address"],
                                "properties": {
                                    "@id": {
                                        "type": "string",
                                        "format": "uri"
                                    },
                                    "@type": {
                                        "type": "string",
                                        "const": "Building"
                                    },
                                    "buildingName": {"$ref": "#/$defs/langString"},
                                    "address": {"$ref": "#/$defs/langString"}
                                }
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": ["@id", "@type", "subjectName", "code"],
                        "properties": {
                            "@id": {
                                "type": "string",
                                "format": "uri"
                            },
                            "@type": {
                                "type": "string",
                                "const": "Subject"
                            },
                            "subjectName": {"$ref": "#/$defs/langString"},
                            "code": {"type": "string"}
                        }
                    },
                    {
                        "type": "object",
                        "required": ["@id", "@type", "buildingName", "address"],
                        "properties": {
                            "@id": {
                                "type": "string",
                                "format": "uri"
                            },
                            "@type": {
                                "type": "string",
                                "const": "Building"
                            },
                            "buildingName": {"$ref": "#/$defs/langString"},
                            "address": {"$ref": "#/$defs/langString"}
                        }
                    }
                ]
            }
        }
    },
    "required": ["@context", "@graph"]
}
