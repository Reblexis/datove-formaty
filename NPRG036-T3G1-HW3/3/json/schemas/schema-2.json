{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.org/schema-2.json",
    "title": "Buildings with Classrooms and Subjects",
    "type": "object",
    "$defs": {
        "langString": {
            "type": "object",
            "properties": {
                "cs": {"type": "string"},
                "en": {"type": "string"}
            },
            "anyOf": [
                {"required": ["cs"]},
                {"required": ["en"]}
            ]
        }
    },
    "properties": {
        "@context": {"type": "object"},
        "@graph": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["@id", "@type", "address", "buildingName"],
                "properties": {
                    "@id": {
                        "type": "string",
                        "format": "uri"
                    },
                    "@type": {
                        "type": "string",
                        "const": "Building"
                    },
                    "address": {"$ref": "#/$defs/langString"},
                    "buildingName": {"$ref": "#/$defs/langString"},
                    "classrooms": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": ["@id", "@type", "capacity", "classroomName"],
                            "properties": {
                                "@id": {
                                    "type": "string",
                                    "format": "uri"
                                },
                                "@type": {
                                    "type": "string",
                                    "const": "Classroom"
                                },
                                "capacity": {"type": "integer"},
                                "classroomName": {"$ref": "#/$defs/langString"},
                                "subjects": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "required": ["@id", "@type", "subjectName", "code"],
                                        "properties": {
                                                    "@id": {
                                                        "type": "string",
                                                        "format": "uri"
                                                    },
                                                    "@type": {
                                                        "type": "string",
                                                        "const": "Subject"
                                                    },
                                                    "subjectName": {"$ref": "#/$defs/langString"},
                                                    "code": {"type": "string"}
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "required": ["@context", "@graph"]
}


